@using System.Text
@using JuCheap.Service.Dto
@{
    ViewBag.Title = "Handle";
    Layout = "~/Areas/Adm/Views/Shared/_Layout_Body.cshtml";
}

@section StylesBefore{
    @Styles.Render("~/Template/Admin/jucheap/Css/DataTable")
}
@section Scripts{
    @Scripts.Render("~/JS/Admin/jucheap/DataTable")
    <script>
        var grid = null;

        function reload() {
            $("#go_search").trigger("click");
        }

        $(function () {
            var cols = [
                { data: "Id", name: "Id", orderable: false },
                { data: "Orderid", name: "orderid", orderable: false },
                { data: "Option", name: "option", orderable: false },
                { data: "Name", name: "name", orderable: false },
                { data: "ReCodeSize", name: "reCodeSize", orderable: false },
                { data: "Number", name: "Number", orderable: true },
                {
                    data: function (e) {
                        var dt = new Date(e);

                        return dt.toLocaleDateString();
                    }, name: "CreateDateTime",
                    orderable: true
                },
                { data: "Note", name: "note", orderable: false }
            ];
            var config = {
                id: "table_server",
                url: "@Url.Action("GetList",@ViewContext.RouteData.Values)",
                columns: cols,
                order: [[0, "desc"]]
            };
            grid = new jucheap.grid(config);
            grid.load();

            $(".box-refresh").click(function () {
                grid.reload();
            });
        });


        function Handle() {
            var action = $("select[name='size_banxing']").val() + "_" + $("select[name='size_type']").val() + "_" + $("select[name='size_gender']").val();
            $.post("@Url.Action("Handle", @ViewContext.RouteData.Values)", { 'Size_Code': $("select[name='size_code']").val(), 'Action': action }, function (msg) {
                if (msg.state == 1) {
                    loadPopup(XF_SY_NAN_thead, msg.msg, '<button type="button" class="btn btn-default" data-dismiss="modal" onclick="save()">导出</button ><button type="button" class="btn btn-default" data-dismiss="modal">取消</button>', false);
                    show_dig();
                } else {
                    alert(msg.msg)
                }
            })
        }

        function loadSelect() {
            var action = $("select[name='size_banxing']").val() + "_" + $("select[name='size_type']").val() + "_" + $("select[name='size_gender']").val();
            $.post("/Adm/HandleData/SizeCodeSelect", { Code: $("select[name='size_code']").val(), Action: action }, function (result) {
                if (result.state == 1) {

                    var data = result.msg;
  
                    var html = "";

                    $("select[name='size_code'] option").remove();
                    for (var i = 0; i < data.length; i++) {
                        html += "<option value='" + data[i][i]["Size_Code"] + "'>" + data[i][i]["Size_Code"] + "</option>"
                    }

                    $("select[name='size_code']").append(html);
                } else {
                    alert(result.msg)
                }

            })


        }
 
    </script>
 
}

<section class="panel">
    <header class="panel-heading head-border">
        数据处理
    </header>
    <div class="panel-body">
        <div class="col-md-12">
            <form action="@Url.Action("ImportHandleData", @ViewContext.RouteData.Values)" method="post">
                <div class="form-group">
                    <label for="name">工单编号</label>
                    <input type="text" class="form-control" name="GDH" />
                </div>
                <div class="form-group">
                    <label for="name">尺码表编号</label>
                    <input type="text" class="form-control" name="Size_Code" />
                </div>
          
                <button type="submit" class="btn btn-success m-b-10"  >处理数据</button>
            </form>
 
    </section>


 

 
 
